<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>

<h2>New book</h2>

<% if book.errors.any? %>
  <div class = "alerts">
    <h2>入力内容にエラーが<%= book.errors.count %>件あります。</h2>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li>error <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.label :body %>
  <%= f.text_area :body %><br>
  <div class="action"><%= f.submit 'Create Book' %></div>
<% end %>