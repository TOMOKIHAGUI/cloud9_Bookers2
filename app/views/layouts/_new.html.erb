<h2>New book</h2>

<% if @book.errors.any? %>
  <div class = "alerts">
    <h2>入力内容にエラーが<%= @book.errors.count %>件あります。</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <div class-"field"><%= f.text_field :title %></div>
  <h4>Opinion</h4>
  <div class-"field"><%= f.text_area :body %></div><br>
  <div class="action"><%= f.submit 'Create Book' %></div>
<% end %>