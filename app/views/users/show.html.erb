
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= attachment__image_tag @user, :profile_img.id %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
           <%= book.name %>
          <% end %>
          </td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>