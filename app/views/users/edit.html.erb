<div class= "container">
  <div class= "row">
    <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      
      <%= render 'layouts/error', book: @user %>

      <%= form_with model: @user, url:"/users/#{@user.id}",local:true do |f| %>
        <div class="form-group">
          <%= f.label :Name %>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Image %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" , class:"form-control-file" %>
        </div>
        <div class="form-group">
          <%= f.label :Intoroduction %>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>