<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class = "alerts">
    <h2>入力内容にエラーが<%= @book.errors.count %>件あります。</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <div class-"field"><%= f.text_field :title %></div>
  <h4>Body</h4>
  <div class-"field"><%= f.text_area :body %></div><br>
  <div class-"action"><%= f.submit 'Update Book' %></div>
<% end %>
<%= link_to 'Show', book_path %> | <%= link_to 'Back', books_path %>