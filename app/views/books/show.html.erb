<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'layouts/sidebar', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></br>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@books.id) do %>
              <%= @books.title %>
            <% end %>
          </td>
          <td><%= @books.body %></td>
          <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books.id), class:"btn btn-sm btn-success" %></td.>
            <td><%= link_to 'Destroy', book_path(@books.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>