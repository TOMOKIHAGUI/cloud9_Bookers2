<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'layouts/sidebar', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></br>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@any_book.id) do %>
              <%= @any_book.title %>
            <% end %>
          </td>
          <td><%= @any_book.body %></td>
          <td>
            <% if current_user.favorites.find_by(book_id: @any_book.id) %>
              <p>
                <%= link_to book_favorites_path(@any_book), method: :delete do %>
                  ♥<%= @any_book.favorites.count %> いいね
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to book_favorites_path(@any_book), method: :post do %>
                  ♡<%= @any_book.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
          </td>
          <td>
            <p>コメント数：<%= @any_book.book_comments.count %></p>
          </td>
          <% if @any_book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@any_book.id), class:"btn btn-sm btn-success" %></td.>
            <td><%= link_to 'Destroy', book_path(@any_book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </tbody>
      </table>
      <div class="comments">
        <table>
        <tbody>
          <% @any_book.book_comments.each do |comments| %>
            <tr>
              <td>
                <%= link_to user_path(comments.user) do %>
                  <%= attachment_image_tag comments.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %></br>
                  <%= comments.user.name %>
                <% end %>
              </td>
              <td>
                <%= comments.comment %>
              </td>
                <% if comments.user == current_user %>
                  <td>
                    <%= link_to '削除', book_book_comment_path(@any_book,comments), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %>
                  </td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
        </table>
        <div class="new-comment">
        <%= form_with(model:[@any_book, @comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'4' %>
          <%= f.submit "送信" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>